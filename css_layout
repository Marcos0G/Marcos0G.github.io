     #color{
         color: darkmagenta;
     }
     .grupo{
         font-family: Arial, Helvetica, sans-serif;
     }
     #auto{
         background-color: lightgray;
        width: 50%;
                height: 200px;
                overflow: auto;
                color: black;
     }
     #visible{
        background-color: lightgray;
        width: 50%;
                height: 200px;
                overflow: visible;
                color: black;
     }
     #hidden{
        background-color: lightgray;
        width: 50%;
                height: 200px;
                overflow: hidden;
                color: black;
     }
     #caja{
         padding: 20px;
         border: 10px ridge lime;
         margin-top: 5%;
         border-top: 20px ridge darkolivegreen;
         
     }
 </style>
